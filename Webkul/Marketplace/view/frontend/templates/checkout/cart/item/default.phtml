$_product=$product;
$seller_id = '';
$marketplaceProduct = $helper->getSellerProductDataByProductId($_product['entity_id']);
foreach ($marketplaceProduct as $value) {
    $seller_id = $value['seller_id'];
}
if($seller_id!=""){
    $rowsocial = $helper->getSellerDataBySellerId($seller_id);
