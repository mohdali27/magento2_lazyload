<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Activo\BulkImages\Block\Adminhtml\Bulkimages" name="adminhtml.block.bulkimages.import.grid.container">
                <block class="Magento\Backend\Block\Widget\Grid" name="adminhtml.block.bulkimages.import.grid" as="grid">
                    <arguments>
                        <argument name="id" xsi:type="string">BulkimagesImportGrid</argument>
                        <argument name="dataSource" xsi:type="object">Activo\BulkImages\Model\ResourceModel\Import\Collection</argument>
                        <argument name="default_sort" xsi:type="string">time</argument>                        
                        <argument name="default_dir" xsi:type="string">DESC</argument>                        
                        <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" as="grid.columnSet" name="adminhtml.bulkimages.import.grid.columnSet">                        
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="time">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">ID</argument>
                                <argument name="id" xsi:type="string">id</argument>
                                <argument name="index" xsi:type="string">id</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="num_images">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Total Image Files</argument>
                                <argument name="index" xsi:type="string">num_images</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="num_images_unmatched">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Unmatched Image Files</argument>
                                <argument name="index" xsi:type="string">num_images_unmatched</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="num_skus">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Total Visible Skus</argument>
                                <argument name="index" xsi:type="string">num_skus</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="num_skus_unmatched">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Unmatched Visible Skus</argument>
                                <argument name="index" xsi:type="string">num_skus_unmatched</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="num_matches">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Skus Matches</argument>
                                <argument name="index" xsi:type="string">num_matches</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="created_at">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Created At</argument>
                                <argument name="index" xsi:type="string">created_at</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="successfull">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Ok?</argument>
                                <argument name="index" xsi:type="string">successfull</argument>
                                <argument name="type" xsi:type="string">options</argument>
                                <argument name="options" xsi:type="array">
                                    <item name="no" xsi:type="array">
                                        <item name="value" xsi:type="string">0</item>
                                        <item name="label" xsi:type="string" translate="true">No</item>
                                    </item>
                                    <item name="yes" xsi:type="array">
                                        <item name="value" xsi:type="string">1</item>
                                        <item name="label" xsi:type="string" translate="true">Yes</item>
                                    </item>
                                </argument>
                            </arguments>
                        </block>                        
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
