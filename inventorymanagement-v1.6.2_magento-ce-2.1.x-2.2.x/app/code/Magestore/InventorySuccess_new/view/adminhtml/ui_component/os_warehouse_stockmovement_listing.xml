                    <item name="dataType" xsi:type="string">actions</item>
                    <item name="sortOrder" xsi:type="number">0</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="qty">
            <argument name="data" xsi:type="array">
