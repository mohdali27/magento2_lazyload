<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-right" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Solwin_Ournews::css/ournews.css"/>
        <css src="Solwin_Ournews::css/owl.carousel.css"/>
        <css src="Solwin_Ournews::css/owl.theme.css"/>
        <css src="Solwin_Ournews::css/owl.transitions.css"/>
    </head>
    <body>      
        <referenceBlock name="top.links">  
            <block class="Solwin\Ournews\Block\Link" name="ournews-top" ifconfig="newssection/newsgroup/toplink" />  
        </referenceBlock>
        <referenceBlock name="footer_links">
            <block class="Solwin\Ournews\Block\Link" name="ournews-footer" ifconfig="newssection/newsgroup/footerlink" />
        </referenceBlock>
        <referenceContainer name="sidebar.additional">
            <block class="Solwin\Ournews\Block\Rightsidebar" name="right-newsblock" ifconfig="newssection/newsgroup/showrightsidebar" />
        </referenceContainer>
    </body>
</page>