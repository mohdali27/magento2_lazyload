<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="Solwin\Ournews\Block\Adminhtml\News\Edit" name="solwin_ournews_news_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Solwin\Ournews\Block\Adminhtml\News\Edit\Tabs" name="solwin_ournews_news_tabs">
                <block class="Solwin\Ournews\Block\Adminhtml\News\Edit\Tab\News" name="solwin_ournews_news_edit_tab_news"/>
                <block class="Solwin\Ournews\Block\Adminhtml\News\Edit\Tab\Content" name="solwin_ournews_news_edit_tab_content"/>
                <block class="Solwin\Ournews\Block\Adminhtml\News\Edit\Tab\Meta" name="solwin_ournews_news_edit_tab_meta"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">news</argument>
                    <argument name="block" xsi:type="string">solwin_ournews_news_edit_tab_news</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">content</argument>
                    <argument name="block" xsi:type="string">solwin_ournews_news_edit_tab_content</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">meta_section</argument>
                    <argument name="block" xsi:type="string">solwin_ournews_news_edit_tab_meta</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>