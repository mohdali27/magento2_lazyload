                        <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                        <depends>
                            <field id="enable">1</field>
                        </depends>
                    </field>
                    <depends>
                        <field id="admin_notifications/general/enable">1</field>
                    </depends>
                </group>
                <group id="order_status" type="text" sortOrder="60" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Order Status Change Email Settings</label>
