                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="email_sender" translate="label comment" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Email Sender</label>
                    <comment><![CDATA[]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Email\Identity</source_model>
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>
                <field id="receiver" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Receiver Email</label>
                    <comment><![CDATA[]]></comment>
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>
                <group id="order" type="text" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
