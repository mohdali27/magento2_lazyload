        </item>
        <item name="spinner" xsi:type="string">emailquotepro_emailproductquote_columns</item>
		
    </argument>
	<dataSource name="emailquotepro_emailproductquote_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">emailquotepro_emailproductquote_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">emailproductquote_id</argument>            
            <argument name="requestFieldName" xsi:type="string">id</argument>            
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">emailproductquote_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
	<listingToolbar name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="template" xsi:type="string">ui/grid/toolbar</item>
            </item>
        </argument>
		<bookmark name="bookmarks">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="storageConfig" xsi:type="array">
                        <item name="namespace" xsi:type="string">emailquotepro_emailproductquote_listing</item>
                    </item>
                </item>
            </argument>
        </bookmark>
		<component name="columns_controls">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsData" xsi:type="array">
                        <item name="provider" xsi:type="string">emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_columns</item>
                    </item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/controls/columns</item>
                    <item name="displayArea" xsi:type="string">dataGridActions</item>
                </item>
            </argument>
        </component>
		<filterSearch name="fulltext">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="provider" xsi:type="string">emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_listing_data_source</item>
                    <item name="chipsProvider" xsi:type="string">emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_listing.listing_top.listing_filters_chips</item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_listing.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.search</item>
                    </item>
                </item>
            </argument>
        </filterSearch>
		
		<filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsProvider" xsi:type="string">emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_columns</item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_listing.listing_top.bookmarks</item>
                        <item name="namespace" xsi:type="string">current.filters</item>
                    </item>
					<item name="templates" xsi:type="array">
                        <item name="filters" xsi:type="array">
                            <item name="select" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                                <item name="template" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                            </item>
                        </item>
                    </item>
                    <item name="childDefaults" xsi:type="array">
                        <item name="provider" xsi:type="string">emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_listing.listing_top.listing_filters</item>
                        <item name="imports" xsi:type="array">
                            <item name="visible" xsi:type="string">emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_columns.${ $.index }:visible</item>
                        </item>
                    </item>
                </item>
            </argument>
        </filters>
		 <exportButton name="export_button">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="selectProvider" xsi:type="string">emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_columns.ids</item>
                </item>
            </argument>
        </exportButton>
       <massaction name="listing_massaction">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="selectProvider" xsi:type="string">emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_listing.emailquotepro_emailproductquote_columns.ids</item>
                    <item name="indexField" xsi:type="string">emailproductquote_id</item>
                </item>
            </argument>
            <action name="delete">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Delete items</item>
                            <item name="message" xsi:type="string" translate="true">Delete selected items?</item>
                        </item>
                        <item name="type" xsi:type="string">delete</item>
                        <item name="label" xsi:type="string" translate="true">Delete</item>
                        <item name="url" xsi:type="url" path="emailquotepro/emailproductquote/massDelete"/>
                    </item>
                </argument>
            </action>
        </massaction>
		<selectionsColumn name="ids">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="indexField" xsi:type="string">emailproductquote_id</item>
				</item>
			</argument>
		</selectionsColumn>
		<paging name="listing_paging"/>
	</listingToolbar>
	
    
    <columns name="emailquotepro_emailproductquote_columns">
		<selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="resizeEnabled" xsi:type="boolean">false</item>
                    <item name="resizeDefaultWidth" xsi:type="string">55</item>
                    <item name="label" xsi:type="string" translate="true">IDs</item>
                    <item name="indexField" xsi:type="string">emailproductquote_id</item>
					<item name="sortOrder" xsi:type="number">1</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="quote_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Quote Id</item>
					<item name="sortOrder" xsi:type="number">10</item>
					<item name="sorting" xsi:type="string">desc</item>
                </item>
            </argument>
        </column>
		<column name="customer_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Customer Name</item>
					<item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
        </column>
		
		
		<column name="customer_email">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Customer Email</item>
					<item name="sortOrder" xsi:type="number">30</item>
                </item>
            </argument>
        </column>
		<column name="product_sku">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Product SKU</item>
					<item name="sortOrder" xsi:type="number">40</item>
                </item>
            </argument>
        </column>
		<column name="telephone">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Telephone</item>
					<item name="sortOrder" xsi:type="number">50</item>
                </item>
            </argument>
        </column>
		<column name="comment">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Comment</item>
					<item name="sortOrder" xsi:type="number">60</item>
                </item>
            </argument>
        </column>
		<column name="grand_total"  class="Magecomp\Emailquotepro\Ui\Component\Listing\Column\TotalActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Order Total</item>
					<item name="sortOrder" xsi:type="number">70</item>
                </item>
            </argument>
        </column>
		<column name="created_time">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Created At</item>
					<item name="sortOrder" xsi:type="number">80</item>
                </item>
            </argument>
        </column>
		
		<column name="status" class="Magecomp\Emailquotepro\Ui\Component\Listing\Column\StatusActions">
		   <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
					 <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="indexField" xsi:type="string">status</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="sortOrder" xsi:type="number">90</item>
                </item>
            </argument>
		</column>		
		<actionsColumn name="actions" class="Magecomp\Emailquotepro\Ui\Component\Listing\Column\TemplatestatusActions">
